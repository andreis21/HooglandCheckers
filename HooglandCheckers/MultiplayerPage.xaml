<Page x:Class="HooglandCheckers.MultiplayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HooglandCheckers"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="MultiplayerPage">

    <Grid>
        <Label Content="Hoogland Checkers" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Height="62" Width="320" FontSize="36"/>
        <Label Content="Choose who you want to be" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Height="62" Width="460" FontSize="36"/>
        <Button x:Name="serverBtn" Content="Server" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="260" Margin="0,204,0,0" Click="serverBtn_Click"/>
        <Button x:Name="clientBtn" Content="Client" HorizontalAlignment="Center" Margin="0,268,0,0" VerticalAlignment="Top" Height="46" Width="260" Click="clientBtn_Click"/>
        <Button x:Name="quitGameBtn" Content="Quit Game" HorizontalAlignment="Center" Margin="0,336,0,0" VerticalAlignment="Top" Height="46" Width="260" Click="quitGameBtn_Click"/>
    </Grid>
</Page>

<Page x:Class="HooglandCheckers.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HooglandCheckers"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="MainPage">

    <Grid>
        <Button x:Name="singleplayerBtn" Content="Singleplayer" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="260" Margin="0,162,0,0" Click="singleplayerBtn_Click"/>
        <Label Content="Hoogland Checkers" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Height="62" Width="320" FontSize="36"/>
        <Button x:Name="multiplayerBtn" Content="Multiplayer" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="260" Margin="0,225,0,0" Click="multiplayerBtn_Click"/>
        <Button x:Name="quitGameBtn" Content="Quit Game" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="46" Width="260" Click="quitGameBtn_Click"/>

    </Grid>
</Page>

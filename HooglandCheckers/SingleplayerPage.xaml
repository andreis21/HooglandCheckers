<Page x:Class="HooglandCheckers.SingleplayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HooglandCheckers"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="SingleplayerPage">

    <Grid>
        <Label Content="Hoogland Checkers" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" Height="62" Width="320" FontSize="36"/>
        <Button x:Name="easyBtn" Content="Easy" HorizontalAlignment="Center" Height="46" Margin="0,150,0,0" VerticalAlignment="Top" Width="260" Click="easyBtn_Click"/>
        <Button x:Name="mediumButton" Content="Medium" Height="46" Width="260" VerticalAlignment="Top" Margin="0,215,0,0" Click="mediumButton_Click"/>
        <Button x:Name="quitGameBtn" Content="Quit Game" HorizontalAlignment="Center" Margin="0,281,0,0" VerticalAlignment="Top" Height="46" Width="260" Click="quitGameBtn_Click"/>
    </Grid>
</Page>
